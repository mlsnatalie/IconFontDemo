<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--live controller-->
    <style name="LiveControllerTextWrap">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="LiveControllerText">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/camera_gray</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LiveControllerTextPlayStop">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/camera_white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LiveControllerCommentText">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/camera_text_hint</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LiveControllerIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="LiveControllerIconPlayStop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="LiveControllerTextPlayStopWrap">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

</resources>
